@{
    int type = (int)ViewBag.TypeOfPost;
    int PersonId = (int)ViewBag.PersonId;

}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="wrapper-post">
    <input type="text" class="inp" id="title" maxlength="100" name="Title" placeholder="Введите заголовок">
    <div class="post-content" id="tab-content">
    </div>
    <div class="add">
        <div class="add-container">
            <div class="add-text"> </div>
            <div class="add-img"><i class="fa fa-camera"></i></div>
        </div>
    </div>

    <input type="text" class="inp" id="tags" name="Tags" maxlength="100" placeholder="Введите несколько тегов через запятую " />

    @using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @id = "PostForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <input id="PostType" name="PostType" type="hidden" value="@type" required="true">
        <input id="PersonId" name="PersonId" type="hidden" value="@PersonId">
        <input type="submit" id="submit" value="Добавить пост" />
    }
</div>
@Scripts.Render("~/Scripts/PostCreate.js")
